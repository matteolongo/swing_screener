# API runtime
PORT=8000
API_HOST=0.0.0.0
API_RELOAD=false

# Comma-separated lists
API_CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174
API_CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH
API_CORS_ALLOWED_HEADERS=Content-Type,Authorization,Accept,Origin,User-Agent,X-Requested-With

# Temporary CSV auth (Phase 2)
API_AUTH_ENABLED=false
API_AUTH_MODE=csv
API_AUTH_USERS_CSV_PATH=data/users.csv
API_AUTH_MEMBERSHIPS_CSV_PATH=data/tenant_memberships.csv
API_AUTH_JWT_SECRET=replace-with-secure-random-string
API_AUTH_JWT_EXPIRE_MINUTES=480

# Managed provider auth mode (Phase 4)
API_AUTH_MANAGED_PROVIDER=oidc
API_AUTH_MANAGED_JWT_SECRET=replace-with-provider-signing-secret
API_AUTH_MANAGED_SUBJECT_CLAIM=sub
API_AUTH_MANAGED_EMAIL_CLAIM=email
API_AUTH_MANAGED_TENANT_CLAIM=tenant_id
API_AUTH_MANAGED_ROLE_CLAIM=role
API_AUTH_MANAGED_ACTIVE_CLAIM=active
